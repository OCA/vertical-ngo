<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record model="ir.ui.view" id="view_purchase_requisition_form">
            <field name="name">purchase.requisition.form.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition_bid_selection.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='reopen_bid']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header/button[@name='generate_po']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <field name="bid_receipt_mode" position="after">
                    <field name="transport_mode_id"/>
                    <field name="transport_vehicle_id"/>
                </field>

            </field>
        </record>

    </data>
</openerp>
