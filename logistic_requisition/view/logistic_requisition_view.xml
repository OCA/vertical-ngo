<?xml version="1.0"?>
<openerp>
    <data>

    <menuitem id="menu_logistic_requisition_base" name="Logistic Requisition" parent="transport_order.menu_logistic" sequence="1"/>

    <record model="ir.ui.view" id="view_logistic_requisition_form">
        <field name="name">logistic.requisition.form</field>
        <field name="model">logistic.requisition</field>
        <field name="arch" type="xml">
            <form string="Logistic Requisition" version="7.0">
                <header>
                    <button name="button_view_lines"
                        string="View Lines"
                        states="confirmed,done,cancel"
                        type="object"
                        class="oe_highlight"/>
                    <button name="button_confirm"
                        string="Confirm"
                        states="draft"
                        class="oe_highlight"
                        type="object" />
                    <button name="button_reset"
                        string="Reset to Draft"
                        states="cancel"
                        type="object" />
                    <button name="button_cancel"
                        string="Cancel"
                        states="draft,confirmed"
                        type="object" />

                    <field name="state" select="1" readonly="1"
                        widget="statusbar"
                        statusbar_visible="draft,confirmed,done" />
                </header>
                <sheet string="Logistic Requisition">
                    <div class="oe_title">
                        <h1>
                            <label string="Logistic Requisition" />
                            <field name="name" class="oe_inline" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="requester_id"/>
                            <field name="consignee_id" on_change="onchange_consignee_id(consignee_id)"/>
                            <field name="consignee_shipping_id"
                                domain="['|', ('parent_id', '=', consignee_id), ('id', '=', consignee_id)]"
                                context="{'default_type':'delivery'}"/>
                            <field name="analytic_id"/>
                            <field name="m_code"/>
                        </group>
                        <group>
                            <field name="preferred_sourcing"/>
                            <field name="type"/>
                            <field name="date"/>
                            <field name="date_delivery"/>
                            <field name="preferred_transport"/>
                            <field name="consignee_reference"/>
                            <field name="user_id"/>
                            <field name="donor_affiliate_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Requisition Lines">
                            <group colspan="4">
                                <field name="sourced" widget="progressbar"/>
                            </group>
                            <field name="line_ids" colspan="4" nolabel="1">
                                <tree string="Requisition Lines" editable="bottom">
                                    <field name="product_id" on_change="onchange_product_id(product_id,requested_uom_id)"/>
                                    <field name="description"/>
                                    <field name="requested_qty"/>
                                    <field name="requested_uom_id"/>
                                    <!-- <field name="confirmed_uom_id" invisible="True"/> -->
                                    <field name="budget_unit_price"/>
                                    <field name="budget_tot_price"/>
                                    <field name="state"/>
                                    <field name="logistic_user_id" attrs="{'invisible':[('state','=','draft')]}"/>
                                    <button name="button_assign" string="Assign" type="object" states="draft" icon="gtk-go-forward"/>
                                    <!--
                                <button name="action_proc" string="Procure" type="object" states="draft" icon="gtk-go-forward"/>
                                <button name="action_cancel" string="Cancel" type="object" states="draft" icon="terp-dialog-close"/>
                                -->
                            </tree>
                            <form string="Requisition Lines">
                                <field name="product_id" on_change="onchange_product_id(product_id,requested_uom_id)"/>
                                <field name="description"/>
                                <field name="requested_qty"/>
                                <field name="requested_uom_id"/>
                                <!-- <field name="confirmed_uom_id" invisible="True"/> -->
                                <field name="logistic_user_id"/>
                                <field name="procurement_user_id"/>
                                <field name="state" invisible="1"/>
                                <field name="budget_unit_price"/>
                                <field name="budget_tot_price"/>
                                <button name="action_proc" string="Procure" type="object" states="draft" icon="gtk-go-forward"/>
                                <button name="action_cancel" string="Cancel" type="object" states="draft" icon="terp-dialog-close"/>
                            </form>

                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_total"
                                class="oe_subtotal_footer_separator"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                        <group string="Validation">
                            <div colspan="4">
                                <label for="budget_holder_id"/>
                                <field name="budget_holder_id"
                                    class="oe_inline"/>
                                <label string=" validated on "
                                    attrs="{'invisible': [('date_budget_holder', '=', False)]}"/>
                                <field name="date_budget_holder"
                                    class="oe_inline"/>
                            </div>
                            <div colspan="4">
                                <label for="finance_officer_id"/>
                                <field name="finance_officer_id"
                                    class="oe_inline"/>
                                <label string=" validated on "
                                    attrs="{'invisible': [('date_finance_officer', '=', False)]}"/>
                                <field name="date_finance_officer"
                                    class="oe_inline"/>
                            </div>
                        </group>
                    </page>
                    <page string="Notes">
                        <group>
                            <div>
                                <label for="description"/>
                            </div>
                            <field name="description" colspan="4"
                                nolabel="1"
                                class="oe_inline"
                                placeholder="Additional notes..."/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_logistic_requisition_tree">
        <field name="name">logistic.requisition.tree</field>
        <field name="model">logistic.requisition</field>
        <field name="arch" type="xml">
            <tree colors="grey:state == 'done';red:date_delivery&lt;current_date and state not in ('done','cancel');black:date_delivery&gt;=current_date;" string="Logistic Requisition">
                <field name="name"/>
                <field name="consignee_id"/>
                <field name="user_id"/>
                <field name="date"/>
                <field name="date_delivery"/>
                <field name="country_id"/>
                <field name="analytic_id"/>
                <field name="amount_total" sum="Total Budget"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="sourced" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="view_logistic_requisition_filter" model="ir.ui.view">
            <field name="name">logistic.requisition.list.select</field>
            <field name="model">logistic.requisition</field>
            <field name="arch" type="xml">
                <search string="Search Logistic Requisition">
                 <group>
                    <filter name="draft" string="New" domain="[('state','=','draft')]" help="New Logistic Requisition"/>
                    <filter name="in_progress" string="Needs Validated" domain="[('state','=','in_progress')]" help="Logistic Requisition in treatment"/>
                    <filter name="sent" string="Quote Sent" domain="[('state','=','sent')]" help="Quote Send to the Requestor"/>
                    <filter name="in_progress" string="Done" domain="[('state','=','done')]"/>
                    <separator orientation="vertical"/>
                    <filter string="Unassigned"  domain="[('user_id','=', False)]" help="Unassigned Requisition"/>
                    <separator orientation="vertical"/>
                    <field name="name"/>
                    <field name="user_id" />
                    <field name="requester_id" />
                    <field name="analytic_id" />
                </group>
                <newline/>
                  <group expand="0" string="Group By..." groups="base.group_extended">
                    <filter string="Requisition Responsible" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="Requester" domain="[]" context="{'group_by':'requester_id'}"/>
                    <filter string="Country" domain="[]" context="{'group_by':'country_id'}"/>
                    <filter string="Project" domain="[]" context="{'group_by':'analytic_id'}"/>
                    <separator orientation="vertical"/>
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    <separator orientation="vertical"/>
                    <filter string="Requisition Date" domain="[]" context="{'group_by':'date'}"/>
                    <filter string="Delivery Date" domain="[]" context="{'group_by':'date_delivery'}"/>
                </group>
              </search>
            </field>
        </record>

    <record model="ir.actions.act_window" id="action_logistic_requisition">
        <field name="name">Requisitions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">logistic.requisition</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_logistic_requisition_filter"/>
        <field name="help"></field>
    </record>

    <menuitem
        id="menu_logistic_requisition"
        sequence="0"
        parent="menu_logistic_requisition_base"
        action="action_logistic_requisition"/>

    <record model="ir.ui.view" id="view_logistic_requisition_line_tree">
        <field name="name">logistic.requisition.line.tree</field>
        <field name="model">logistic.requisition.line</field>
        <field name="arch" type="xml">
           <tree string="Logistic Requisition Line">
             <field name="requisition_id"/>
             <field name="requested_date"/>
             <field name="requested_qty"/>
             <field name="requested_uom_id"/>
             <field name="product_id" on_change="onchange_product_id(product_id,requested_uom_id)"/>
             <field name="description"/>
             <field name="transport_order_id"/>
             <field name="logistic_user_id"/>
             <field name="procurement_user_id"/>
             <field name="budget_tot_price" sum="Total Budget"/>
             <field name="state"/>
             <field name="country_id" invisible="1"/>
             <button name="%(action_requisition_split_into)d" icon="gtk-justify-fill" string="Split the line" type="action" states="draft,assigned" />
           </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_logistic_requisition_line_calendar">
        <field name="name">logistic.requisition.line.tree</field>
        <field name="model">logistic.requisition.line</field>
        <field name="arch" type="xml">
            <calendar string="Logistic Requisition Line"
                date_start="requested_date" color="country_id">
                <field name="id"/>
                <field name="requisition_id"/>
                <field name="description"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="view_logistic_requisition_line_kanban">
        <field name="name">logistic.requisition.line.kanban</field>
        <field name="model">logistic.requisition.line</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="description"/>
                <field name="requested_qty"/>
                <field name="requested_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open">
                                         [<field name="requisition_id"/>] <field name="description"/>
                                    </a>
                                </h4>
                                <div name="tags"/>
                                <ul>
                                    <li>Req. Qty: <field name="requested_qty"></field></li>
                                    <li>Req. Date: <field name="requested_date"></field></li>
                                    <li>Country: <field name="country_id"></field></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record model="ir.ui.view" id="view_logistic_requisition_line_form">
        <field name="name">logistic.requisition.line.form</field>
        <field name="model">logistic.requisition.line</field>
        <field name="arch" type="xml">
            <form string="Logistic Requisition Line" version="7.0">
                <header>
                    <button name="button_assign"
                        states="confirmed"
                        string="Assign"
                        type="object"
                        class="oe_highlight"/>
                    <button name="button_create_cost_estimate"
                        states="assigned"
                        string="Create Cost Estimate"
                        type="object"
                        class="oe_highlight"/>
                    <button name="button_open_cost_estimate"
                        states="quoted"
                        string="Open Cost Estimate"
                        type="object"
                        class="oe_highlight"/>
                    <button name="button_cancel"
                        states="confirmed,assigned"
                        string="Cancel"
                        type="object"/>
                    <button name="button_reset"
                        string="Reset to Draft"
                        states="cancel"
                        type="object" />
                    <field name="state" select="1" readonly="1"
                        widget="statusbar"
                        statusbar_visible="draft,confirmed,assigned,quoted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label string="Requisition"/>
                            <field name="requisition_id" class="oe_inline" readonly="1"/> / 
                            <label string="Line NÂ° "/>
                            <field name="id" class="oe_inline" readonly="1"/>
                        </h1>
                    </div>
                    <div class="oe_right oe_button_box" name="buttons">
                        <button string="View Stock" name="view_stock_by_location" type="object"/>
                        <button string="View Prices" name="view_price_by_location" type="object"/>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" on_change="onchange_product_id(product_id,requested_uom_id)"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="logistic_user_id"/>
                            <field name="procurement_user_id"/>
                        </group>
                    </group>
                    <notebook>
                      <page string="Requisition">
                        <group>
                            <group name="requested_grp" string="Demand">
                                 <field name="requested_type"/>
                                 <label for="requested_qty"/>
                                 <div>
                                     <field name="requested_qty" class="oe_inline"/>
                                     <field name="requested_uom_id" class="oe_inline"/>
                                     <button name="%(action_requisition_split_into)d" string="Split it" type="action" states="draft,assigned" />
                                 </div>
                                 <field name="requested_date"/>
                                 <field name="budget_unit_price" widget="monetary"/>
                                 <field name="budget_tot_price" widget="monetary"/>
                            </group>
                            <group name="sourced_grp" string="Proposal">
                                <field name="confirmed_type"/>
                                <label for="confirmed_qty"/>
                                <div>
                                    <field name="confirmed_qty" class="oe_inline"/>
                                </div>
                                <field name="etd_date"/>
                                <field name="dispatch_location_id" attrs="{'invisible':[('confirmed_type','!=','stock')]}"/>
                                <field name="purchase_id" attrs="{'invisible':[('confirmed_type','!=','order')]}"/>
                                <field name="estimated_goods_cost" widget="monetary"/>
                                <field name="transport_order_id" class="oe_inline"/>
                                <field name="estimated_transportation_cost" widget="monetary"/>
                                <field name="estimated_tot_cost" widget="monetary"/>
                            </group>
                            <group name="rfq_grp" string="Purchase Requisition">
                                <label for="po_requisition_id"/>
                                <div>
                                    <field name="po_requisition_id" class="oe_inline"/>
                                    <button name="action_create_po_requisition" string="Make RFQ" type="object" states="draft,assigned" />
                                 </div>
                            </group>
                        </group>
                      </page>
                      <page string="Offers">
                        <field name="offer_ids"/>
                      </page>
                      <page string="Remarks">
                      </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_logistic_requisition_line_filter" model="ir.ui.view">
            <field name="name">logistic.requisition.line.list.select</field>
            <field name="model">logistic.requisition.line</field>
            <field name="arch" type="xml">
                <search string="Search Logistic Requisition Line">
                 <group>
                    <filter name="draft" string="New" domain="[('state','=','draft')]" help="New Logistic Requisition Line"/>
                    <filter name="assigned" string="Assigned" domain="[('state','=','assigned')]" help="Assigned Logistic Requisition Line"/>
                    <filter name="cost_estimated" string="Cost Estimated" domain="[('state','=','cost_estimated')]" help="Cost Estimated Requisition Lines"/>
                    <filter name="quoted" string="Quoted" domain="[('state','=','quoted')]"/>
                    <separator orientation="vertical"/>
                    <filter string="Unassigned"  domain="[('logistic_user_id','=', False)]" help="Unassigned Requisition"/>
                    <separator orientation="vertical"/>
                    <field name="description" />
                    <field name="requisition_id" />
                    <field name="logistic_user_id" />
                    <field name="procurement_user_id" />
                </group>
                <newline/>
                  <group expand="0" string="Group By..." groups="base.group_extended">
                    <filter string="Assigned Specialist" domain="[]" context="{'group_by':'logistic_user_id'}"/>
                    <filter string="Procurement Officer" domain="[]" context="{'group_by':'procurement_user_id'}"/>
                    <filter string="Logistic Requisition" domain="[]" context="{'group_by':'requisition_id'}"/>
                    <separator orientation="vertical"/>
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                    <filter string="Country" domain="[]" context="{'group_by':'country_id'}"/>
                </group>
              </search>
            </field>
        </record>

    <record model="ir.actions.act_window" id="action_logistic_requisition_line">
        <field name="name">Requisitions Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">logistic.requisition.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,calendar,kanban</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_logistic_requisition_line_filter"/>
        <field name="help"></field>
    </record>

    <menuitem
        id="menu_logistic_requisition_line"
        sequence="10"
        parent="menu_logistic_requisition_base"
        action="action_logistic_requisition_line"/>

    <record id="purchase.purchase_waiting" model="ir.actions.act_window">
        <field name="name">Cost Estimate Waiting Approval</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('date_order','&gt;',time.strftime('%Y-01-01 00:00:00')),('date_order','&lt;',time.strftime('%Y-12-31 23:59:59')), ('state','in',('wait','confirmed'))]</field>
    </record>

    <record id="logistic_requisition" model="ir.actions.act_window">
        <field name="name">Logistic Requisition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">logistic.requisition</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

    <record id="purchase.board_purchase_form" model="ir.ui.view">
        <field name="name">board.purchase.form</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="Purchase Dashboard">
                <board style="2-1">
                    <column>
                        <action name="%(logistic_requisition)d" string="Logistic Requisition" creatable="true"/>
                        <action name="%(purchase.purchase_draft)d" string="Request for Quotations" creatable="true"/>
                        <action name="%(purchase.purchase_waiting)d" string="Cost Estimate Waiting Approval" creatable="true"/>
                    </column>
                    <column>
                        <action name="%(purchase.action_purchase_order_monthly_categ_graph)d" string="Monthly Purchases by Category"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    </data>
</openerp>
