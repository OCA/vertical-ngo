<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_logistic_requisition_split_line_wizard" model="ir.ui.view">
            <field name="name">Split Request Line</field>
            <field name="model">logistic.requisition.split.line</field>
            <field name="arch" type="xml">
            <form string="Split Request Line" version="7.0">
                <separator string="How much do you want to Leave in the Line ?"/>
                <group>
                    <field name="quantity"/>
                </group>
                <footer>
                    <button name="split" string="Ok" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>
        
       <record id="action_request_split_into" model="ir.actions.act_window">
             <field name="name">Split Request Line</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">logistic.requisition.split.line</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="target">new</field>
        </record>

    </data>
</openerp>
